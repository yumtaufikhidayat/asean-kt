<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.ProfileFragment">

    <include
        android:id="@+id/toolbarProfile"
        layout="@layout/toolbar_detail"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbarProfile"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/bg_gradient_profile"
                app:layout_constraintTop_toTopOf="parent"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgProfile"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="36dp"
                android:scaleType="centerCrop"
                android:elevation="10dp"
                tools:src="@tools:sample/avatars"
                app:civ_border_width="1dp"
                app:civ_border_color="@color/purple_500"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="90dp"
                android:layout_marginBottom="10dp"
                android:layout_marginHorizontal="16dp"
                android:paddingHorizontal="8dp"
                android:paddingVertical="20dp"
                android:elevation="8dp"
                android:background="@drawable/bg_profile"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <TextView
                    android:id="@+id/tvProfileName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="36dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    tools:text="@tools:sample/full_names"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:id="@+id/tvProfileJob"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="@tools:sample/cities"
                    android:gravity="center"
                    app:layout_constraintTop_toBottomOf="@id/tvProfileName"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:id="@+id/tvProfileDesc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginHorizontal="16dp"
                    tools:text="@tools:sample/lorem/random"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvProfileJob"/>

                <TextView
                    android:id="@+id/tvProfileAbout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="@string/textSummary"
                    app:layout_constraintTop_toBottomOf="@id/tvProfileDesc"
                    app:layout_constraintStart_toStartOf="@id/tvProfileDesc"/>

                <ImageView
                    android:id="@+id/imgProfileEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_outline_email"
                    android:padding="4dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_round_purple"
                    android:contentDescription="@string/app_name"
                    app:layout_constraintTop_toBottomOf="@id/tvProfileAbout"
                    app:layout_constraintStart_toStartOf="@+id/tvProfileAbout"/>

                <TextView
                    android:id="@+id/tvProfileEmailTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="@string/textEmail"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="@id/imgProfileEmail"
                    app:layout_constraintBottom_toTopOf="@id/tvProfileEmail"
                    app:layout_constraintStart_toEndOf="@id/imgProfileEmail"
                    app:layout_constraintEnd_toEndOf="@id/tvProfileDesc" />

                <TextView
                    android:id="@+id/tvProfileEmail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    tools:text="@tools:sample/cities"
                    android:textColor="@color/black"
                    android:maxLines="2"
                    app:layout_constraintTop_toBottomOf="@id/tvProfileEmailTitle"
                    app:layout_constraintBottom_toBottomOf="@id/imgProfileEmail"
                    app:layout_constraintStart_toEndOf="@id/imgProfileEmail"
                    app:layout_constraintEnd_toEndOf="@id/tvProfileDesc"/>

                <ImageView
                    android:id="@+id/imgProfileOffice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_outline_office"
                    android:padding="4dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/bg_round_red"
                    android:contentDescription="@string/app_name"
                    app:layout_constraintTop_toBottomOf="@id/imgProfileEmail"
                    app:layout_constraintStart_toStartOf="@+id/tvProfileAbout"/>

                <TextView
                    android:id="@+id/tvProfileOfficeTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="@string/textOffice"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="@id/imgProfileOffice"
                    app:layout_constraintTop_toBottomOf="@id/tvProfileOffice"
                    app:layout_constraintStart_toEndOf="@id/imgProfileOffice"
                    app:layout_constraintEnd_toEndOf="@id/tvProfileDesc"/>

                <TextView
                    android:id="@+id/tvProfileOffice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    tools:text="@tools:sample/cities"
                    android:textColor="@color/black"
                    android:maxLines="2"
                    app:layout_constraintTop_toBottomOf="@id/tvProfileOfficeTitle"
                    app:layout_constraintBottom_toBottomOf="@id/imgProfileOffice"
                    app:layout_constraintStart_toEndOf="@id/imgProfileOffice"
                    app:layout_constraintEnd_toEndOf="@id/tvProfileDesc"/>
                
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>